<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SearchMainActivity">

    <EditText
        android:id="@+id/searchEdittext"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edittext_round"
        android:ems="10"
        android:hint="검색할 책 이름을 입력하세요."
        android:inputType="text"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="150dp"
        android:paddingBottom="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/searchEdittext"
        app:layout_constraintEnd_toEndOf="@+id/searchEdittext"
        app:layout_constraintTop_toTopOf="@+id/searchEdittext"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEdittext">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result1"
                android:layout_width="361dp"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/bookimg1"
                    android:layout_width="82dp"
                    android:layout_height="116dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/sell_book" />

                <TextView
                    android:id="@+id/booktitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Android..."
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/booksub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="우재남, 박길식/한빛 아카데미"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/booktitle1"
                    app:layout_constraintTop_toBottomOf="@+id/booktitle1" />

                <TextView
                    android:id="@+id/bookdescript1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="기본적인 프로그래밍을 접해본 독자\n라면 안드로이드에 꼭 필요한 Java\n기초부터 안드로이드 앱 개발까지\n학습 가능하도록 구성되어 있다."
                    app:layout_constraintStart_toStartOf="@+id/booksub1"
                    app:layout_constraintTop_toBottomOf="@+id/booksub1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result2"
                android:layout_width="361dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result1">

                <ImageView
                    android:id="@+id/bookimg2"
                    android:layout_width="82dp"
                    android:layout_height="116dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/search_book1" />

                <TextView
                    android:id="@+id/bookdescript2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Android 10.0 (Q) 버전으로 만나는 \nAndroid Studio를 활용한 안드로 \n이드 프로그래밍. 기본적인 프로그 \n래밍을 접해본 독자라면 안드로이 \n드에 꼭 필요한 Java 기초부터"
                    app:layout_constraintStart_toStartOf="@+id/booksub2"
                    app:layout_constraintTop_toBottomOf="@+id/booksub2" />

                <TextView
                    android:id="@+id/booktitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Android..."
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/booksub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="우재남, 박길식/한빛 아카데미"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/booktitle2"
                    app:layout_constraintTop_toBottomOf="@+id/booktitle2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result3"
                android:layout_width="361dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="140dp"
                android:background="@drawable/edittext_round"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result2">

                <ImageView
                    android:id="@+id/bookimg3"
                    android:layout_width="82dp"
                    android:layout_height="116dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/search_book2" />

                <TextView
                    android:id="@+id/booktitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Android..."
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/booksub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="우재남, 박길식/한빛 아카데미"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/booktitle3"
                    app:layout_constraintTop_toBottomOf="@+id/booktitle3" />

                <TextView
                    android:id="@+id/bookdescript3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Android 9.0 (파이) 버전으로 만나 \n는 Android Studio를 활용한 안드 \n로이드 프로그래밍. 초보자도 쉽게 \n접근할 수 있도록 친절하게 설명"
                    app:layout_constraintStart_toStartOf="@+id/booksub3"
                    app:layout_constraintTop_toBottomOf="@+id/booksub3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>